@page "/"
@model _HostModel
@namespace BlazorOnFhir.Pages
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>BlazorOnFhir</title>
    <link rel="stylesheet" href="@Model.UrlService.Url("/css/bootstrap/bootstrap.min.css")" type="text/css" />
    <link href="@Model.UrlService.Url("/_content/Blazored.Modal/blazored-modal.css")" rel="stylesheet" type="text/css" />
    <link href="@Model.UrlService.Url("/css/site.css")" rel="stylesheet" type="text/css" />
    <link href="@Model.UrlService.Url("/BlazorOnFhir.styles.css")" rel="stylesheet" type="text/css" />
</head>
<body>
    <component type="typeof(App)" render-mode="ServerPrerendered" />

    <div id="blazor-error-ui">
        <environment include="Staging,Production">
            An error has occurred. This application may no longer respond until reloaded.
        </environment>
        <environment include="Development">
            An unhandled exception has occurred. See browser dev tools for details.
        </environment>
        <a href="@Model.UrlService.Url("")" class="reload">Reload</a>
        <a class="dismiss">🗙</a>
    </div>

    <script src="@Model.UrlService.Url("/_framework/blazor.server.js")" type="text/javascript"></script>
    <script src="@Model.UrlService.Url("/_content/Blazored.Modal/blazored.modal.js")" type="text/javascript"></script>
</body>
</html>
